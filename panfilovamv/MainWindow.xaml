<Window x:Class="panfilovamv.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:panfilovamv"
        mc:Ignorable="d"
        Title="Авторизация"
        Background="Snow"
        Width="300"
        Height="350"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">

    <StackPanel Margin="30">
        <TextBlock Text="Login"
                   FontSize="14"
                   FontWeight="SemiBold"/>
        <TextBox Name="loginName"
                 Margin="0,5,0,20"
                 FontSize="14"
                 Padding="5"/>

        <TextBlock Text="Password"
                   FontSize="14"
                   FontWeight="SemiBold"/>
        <PasswordBox Name="passwordName"
                     Margin="0,5,0,20"
                     FontSize="14"
                     Padding="5"/>

        <Button Name="Login_btn"
                Content="LogIn"
                Margin="30,10,30,0"
                Height="35"
                Background="YellowGreen"
                Click="Login_btn_Click">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>
    </StackPanel>
</Window>
