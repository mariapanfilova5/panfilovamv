<Window x:Class="panfilovamv.Admin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:panfilovamv"
        mc:Ignorable="d"
        Title="Администратор"
        Width="600"
        Height="529"
        Background="White"
        WindowStartupLocation="CenterScreen">

    <StackPanel Margin="20,20,20,12">
        <DataGrid Name="dtUsers"
                  AutoGenerateColumns="False"
                  IsReadOnly="False"
                  Margin="10,10,10,20"
                  SelectionMode="Single"
                  Height="350">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Фамилия" Binding="{Binding last_name}" Width="*"/>
                <DataGridTextColumn Header="Имя" Binding="{Binding first_name}" Width="*"/>
                <DataGridTextColumn Header="Роль" Binding="{Binding Roles1.name}" Width="*"/>
                <DataGridTextColumn Header="Логин" Binding="{Binding email}" Width="*"/>
                <DataGridTextColumn Header="Заблокирован" Binding="{Binding is_locked}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button Content="Добавить пользователя"
                Width="160"
                Height="30"
                HorizontalAlignment="Left"
                Click="Button_Click" />

        <Button Content="Разблокировать"
                Width="160"
                Height="30"
                Margin="0,30,0,0"
                HorizontalAlignment="Left"
                Click="Button_Click_1" />
    </StackPanel>
</Window>